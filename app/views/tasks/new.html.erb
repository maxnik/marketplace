<h1>Добавление нового заказа</h1>

<% dived_form_for @task do |f| -%>
  <%= f.text_field_for :name, :label => 'Заголовок', 
                              :bottom => 'название будущей статьи или серии статей' %>
  <%= f.text_area_for :body, :label => 'Текст заказа',
                             :bottom => 'более подробное описание заказа для копирайтера' %>
  <%= f.text_field_for :price, :label => 'Цена за тыс. зн.',
                               :bottom => 'стоимость тысячи знаков без пробелов в WMZ без учета комиссии Textino' %>
  <%= f.submit_tag 'Добавить заказ' %>
<% end -%>
