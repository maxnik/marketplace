<% if article.nil? %>
  <tr class="highlighted">
  <td class="title">Статья удалена</td>
  <td class="price">&nbsp;</td><td class="length">&nbsp;</td><td class="time">&nbsp;</td>
  </tr>
<% else %>

<tr class="<%= cycle('even', 'odd') %>" id="article_<%= article.id %>">
  <td class="title">
    <%= link_to(h(article.title).gsub(' ', ' <wbr />'), task_article_path(task, article), :class => 'article-link') %>

     <% if (logged_in? && article.author_id == current_user.id) %>
       <ul class="actions">
         <li><%= link_to('удалить', article_path(article), :class => 'delete delete-link',
                         :title => 'Вы уверены, что хотите удалить эту статью?') %></li>
         <li><%= link_to('редактировать', edit_article_path(article), :class => 'edit-link',
	                 :rel => 'nofollow') %></li>
       </ul>
     <% end %>

  </td>
  <td class="price"><%= formatted_article_price(article) %></td>
  <td class="length"><%= formatted_article_length(article) %> </td>
  <td class="time"><%= formatted_article_time(article) %></td>
</tr>

<% end %>
