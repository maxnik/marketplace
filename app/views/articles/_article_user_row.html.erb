<tr class="<%= cycle('even', 'odd') %>" id="article_<%= article.id %>">
  <td class="title">
    <%= link_to(article.owner_name, category_path(article.owner_param), :class => 'category-link') %>
    <br />
    <%= public_or_personal_article_link(article, current_user) %>
  </td>
  <td class="author"><%= author_link_for(article) %></td>
  <td class="price"><%= formatted_article_price(article) %></td>
  <td class="length"><%= formatted_article_length(article) %></td>
  <td class="time"><%= formatted_article_time(article) %></td>
</tr>
