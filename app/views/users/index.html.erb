<% @title = 'Рейтинг пользователей' %>

<% RuTils::overrides = true %>

<h1>Рейтинг пользователей</h1>
<% if @users.blank? %>

<% else %>
<table class="users">
  <thead>
  <tr>
    <th>&nbsp;</th>
    <th><%= link_to('Отзывы', users_path) %></th>
    <th><%= link_to('В сервисе', users_path) %></th>  
    <th><%= link_to('В продаже', users_path) %></th>
    <th><%= link_to('Приобрел', users_path) %></th>
  </tr>
  </thead>
  <tbody>
<% @users.each do |user| %>
  <tr class="<%= cycle('even', 'odd') -%>">
    <td class="user-login"><%= link_to(wbr_by(h(user.login), 10), user_path(user), :class => 'user-link') %></td>
    <td class="user-rating"><i>+10</i><br /><b>-20</b></td>
    <td><%= time_ago_in_words(user.created_at) %></td>
    <% if (user.forsale_articles_count == 0) %>
      <td>нет статей<br />в продаже</td>
    <% else %>
      <td><%= user.forsale_articles_count %> <%= user.forsale_articles_count.items('статья', 'статьи', 'статей') %></td>
    <% end %>
    <td><%= 15.to_s+" "+15.items('статью', 'статьи', 'статей') %></td>
  </tr>
<% end %>
  </tbody>
</table>

<%= will_paginate @users %>
<% end %>
